@model IEnumerable<BasketballLeagueApp.Models.administradores>

@{
    ViewData["Title"] = "Crear Administrador";
    Layout = "~/Views/Shared/_LayoutAdmins.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-light">
                    <h4 class="mb-0 text-primary">
                        <i class="bi bi-person-plus-fill me-2"></i>Registrar Nuevo Administrador
                    </h4>
                </div>
                <div class="card-body">
                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post" action="@Url.Action("Crear", "Administradores")">
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-person-fill me-1"></i>Nombre</label>
                            <input type="text" name="nombre" class="form-control" placeholder="Nombre" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-person-lines-fill me-1"></i>Apellido</label>
                            <input type="text" name="apellido" class="form-control" placeholder="Apellido" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-envelope-fill me-1"></i>Email</label>
                            <input type="email" name="email" class="form-control" placeholder="Email" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-lock-fill me-1"></i>Contraseña</label>
                            <div class="input-group">
                                <input type="password" name="password_hash" id="password" class="form-control" placeholder="Contraseña" required>
                                <button type="button" class="btn btn-outline-secondary" onclick="togglePassword()">
                                    <i id="toggleIcon" class="bi bi-eye"></i>
                                </button>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                                <i class="bi bi-person-check me-2"></i>Registrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword() {
            var passwordInput = document.getElementById("password");
            var toggleIcon = document.getElementById("toggleIcon");

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                toggleIcon.classList.remove("bi-eye");
                toggleIcon.classList.add("bi-eye-slash");
            } else {
                passwordInput.type = "password";
                toggleIcon.classList.remove("bi-eye-slash");
                toggleIcon.classList.add("bi-eye");
            }
        }
    </script>
}

<style>
    .form-label i {
        color: #0d6efd;
    }

    .alert {
        border-left: 4px solid;
    }

    .alert-danger {
        border-left-color: #dc3545;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }

    .card-header h4 i {
        color: #6610f2;
    }
</style>
