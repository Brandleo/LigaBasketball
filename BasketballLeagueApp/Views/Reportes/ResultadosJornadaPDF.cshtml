@model BasketballLeagueApp.Models.ViewModels.ResultadosJornadaPDFViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Resultados de Jornada</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 30px;
        }

        h2 {
            text-align: center;
            margin-bottom: 5px;
        }

        .subtitulo {
            text-align: center;
            font-size: 14px;
            color: #666;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 14px;
        }

        th, td {
            border: 1px solid #444;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: #333;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .footer {
            margin-top: 30px;
            font-size: 12px;
            text-align: right;
            color: #888;
        }
    </style>
</head>
<body>
    <h2>Resultados - @Model.TemporadaNombre</h2>
    <div class="subtitulo">
        Jornada @Model.NumeroJornada<br />
        Generado el @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
    </div>

    <table>
        <thead>
            <tr>
                <th>Partido</th>
                <th>Puntos Local</th>
                <th>Puntos Visitante</th>
                <th>Ganador</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var partido in Model.Partidos)
            {
                <tr>
                    <td>@partido.Equipos</td>
                    <td>@partido.PuntosLocal</td>
                    <td>@partido.PuntosVisitante</td>
                    <td>@partido.Ganador</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
