@model BasketballLeagueApp.Models.ViewModels.ReporteJugadoresDestacadosVM

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Top 10 Jugadores Destacados</title>
    <style>
        body {
            font-family: Arial;
            font-size: 12px;
        }

        h2, h4 {
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #000;
            padding: 6px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h2>Top 10 Jugadores Destacados</h2>
    <h4>Temporada: @Model.NombreTemporada</h4>

    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Jugador</th>
                <th>Equipo</th>
                <th>Puntos</th>
                <th>Rebotes</th>
                <th>Asistencias</th>
                <th>Faltas</th>
                <th>Minutos (Prom.)</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Jugadores.Count && i < 10; i++)
            {
                var jugador = Model.Jugadores[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>@jugador.NombreJugador</td>
                    <td>@jugador.Equipo</td>
                    <td>@jugador.TotalPuntos</td>
                    <td>@jugador.TotalRebotes</td>
                    <td>@jugador.TotalAsistencias</td>
                    <td>@jugador.TotalFaltas</td>
                    <td>@jugador.PromedioMinutos.ToString("0.0")</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
