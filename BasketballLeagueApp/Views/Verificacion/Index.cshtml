@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutAdmins.cshtml";
}

<div class="container-fluid login-container d-flex justify-content-center align-items-center">
    <div class="login-box">
        <h2 class="text-center">Iniciar Sesión</h2>
        <form method="post" asp-action="Autenticar" asp-controller="Administradores">
            <div class="mb-3">
                <input type="email" id="email" name="email" class="form-control" placeholder="Email"
                       value="@ViewData["Email"]" required>
            </div>
            <div class="mb-3 position-relative">
                <input type="password" id="password" name="password" class="form-control" placeholder="Contraseña" required>
                <button type="button" class="btn btn-toggle-password" onclick="togglePassword()">
                    <i id="toggleIcon" class="bi bi-eye"></i>
                </button>
            </div>
            <div >
                <p class="text-danger">@ViewData["ErrorMessage"]</p>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-login">Iniciar Sesión</button>
            </div>
        </form>
    </div>
</div>
@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
}

@section Scripts {
    <script>
        function togglePassword() {
            var passwordInput = document.getElementById("password");
            var toggleIcon = document.getElementById("toggleIcon");
            
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                toggleIcon.classList.remove("bi-eye");
                toggleIcon.classList.add("bi-eye-slash");
            } else {
                passwordInput.type = "password";
                toggleIcon.classList.remove("bi-eye-slash");
                toggleIcon.classList.add("bi-eye");
            }
        }
    </script>
}
