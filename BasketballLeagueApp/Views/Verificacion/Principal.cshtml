@{
    ViewData["Title"] = "Principal";
    Layout = "~/Views/Shared/_LayoutAdmins.cshtml";

    var nombre = Context.Session.GetString("nombre") ?? "Administrador";
    var apellido = Context.Session.GetString("apellido") ?? "";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">¡Bienvenido, @nombre @apellido!</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <p class="text-center">Aquí podrás gestionar la liga de basketball.</p>
        </div>
    </div>
</div>
